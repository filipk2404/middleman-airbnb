
<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>
<div class = "container">
 <div style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url(<%=  "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}" %>); height: 20vh; background-position: center;">
 </div>
 <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-1">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
    <p><%= flat.owner %></p>
  </div>
</div>
</div>
<p><%= flat.name %></p>
<h1><%= flat.description %></h1>
<p><%= flat.city_name %></p>

</div>
